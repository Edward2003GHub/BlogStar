<%- include("partials/header.ejs") %>

<div class="modifyForm">
  <% if (locals.post) { %>
      <form method="post" action="/api/posts/<%=post.id%>">
          <input type="text" name="title" value="<%= post.title %>" required class="create-header"/>
          <br>
          <textarea name="content" cols="30" rows="10" placeholder="Post Description" required class="create-textarea"><%=post.content %></textarea>
          <br>
          <input type="text" name="author" value="<%= post.author %>" required class="create-header mt-1">
          <br>
          <button class="create-btn" type="submit">
              <%= submit %>
          </button>
      </form>
  <% } else {%>
      <form method="post" action="/api/posts">
          <input type="text" name="title" placeholder="Post Title" required class="create-header"/>
          <br>
          <textarea name="content" cols="30" rows="10" placeholder="Post Content" required class="create-textarea"></textarea>
          <br>
          <input type="text" name="author" placeholder="Author" required class="create-header mt-1">
          <br>
          <button class="create-btn" type="submit">
              <%= submit %>
          </button>
      </form>
    <% } %>
</div>

<%- include("partials/footer.ejs") %>